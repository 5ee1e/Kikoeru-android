<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_no_cover" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/ivCover"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ivCover"
        android:text="title"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvComArt"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tvTitle"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="com / art" />

    <TextView
        android:id="@+id/tvTags"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tvComArt"
        android:layout_alignStart="@+id/tvComArt"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="tag" />

</RelativeLayout>