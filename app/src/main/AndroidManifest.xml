<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zinhao.kikoeru">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kikoeru">
        <activity
            android:name=".LoginAccountActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WorkActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">

        </activity>
        <activity android:name=".LrcShowActivity" />
        <activity
            android:name=".VideoPlayerActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".MusicPlayerActivity" />
        <activity
            android:name=".LrcFloatWindow"
            android:theme="@style/Theme.AppCompat.Dialog.MinWidth" />
        <activity
            android:name=".ImageBrowserActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <service android:name=".AudioService" />
    </application>

</manifest>